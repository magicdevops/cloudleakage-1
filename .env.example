# CloudLeakage Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
# For Docker PostgreSQL container (from host machine):
DATABASE_URL=postgresql://app_user:app_pass@localhost:5432/cloudleakage

# For external PostgreSQL server:
# DATABASE_URL=postgresql://username:password@host:port/database

# For container-to-container (if running app in Docker too):
# DATABASE_URL=postgresql://app_user:app_pass@postgres:5432/cloudleakage

# Security Keys
SECRET_KEY=your-secure-random-secret-key-32-chars-minimum
ENCRYPTION_KEY=oz2fA05GT7jHw-kReDcvXCHc9weUCOM2sBe7bIOQqps=

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Optional: Custom database path for SQLite (if not using PostgreSQL)
# DATABASE_PATH=cloudleakage.db

# Optional: Gemini API for Terraform Analyzer
# GEMINI_API_KEY=your-google-ai-studio-api-key

# Optional: Redis Configuration (for Docker Compose)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Production Settings
# FLASK_ENV=production
# FLASK_DEBUG=0

# Docker Compose PostgreSQL Container Settings
POSTGRES_DB=cloudleakage
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_pass
